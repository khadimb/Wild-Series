{% extends "base.html.twig" %}

{% block title %}{{ actor.name }}{% endblock %}

{% block body %}
    <div>
        <h2>{{ actor.name }}</h2>
    </div>

    {% for program in actor.programs %}
        <ul>
            <li>
                <a href="{{ path('program_show', { id: program.id }) }}">{{ program.title }}</a>
            </li>
        </ul>
    {% endfor %}
{% endblock %}