{% extends "base.html.twig" %}

{% block title %}All actors{% endblock %}

{% block body %}
    <h1>Tous les Acteurs: </h1>
    {% for actor in actors %}
        <ul>
            <li>
                <a href="{{ path('actor_show', { id: actor.id }) }}">{{ actor.name }}</a>
            </li>
        </ul>
    {% else %}
        Aucun acteur trouvée.
    {% endfor %}

    <a href="{{ path('app_index') }}">
         Retour à l'accueil
    </a>
{% endblock %}
