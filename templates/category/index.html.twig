{% extends "base.html.twig" %}

{% block title %}All categories{% endblock %}


{% block body %}
    <a href="{{ path('category_new') }}">
        Ajouter une catégorie
    </a>
    <h1>Toutes les categories : </h1>
    {% for category in categories %}
        <ul>
            <li>
                <a href="{{ path('category_show', { categoryName: category.name }) }}">{{ category.name }}</a>
            </li>
        </ul>
    {% else %}
        Aucune catégorie trouvée.
    {% endfor %}

    <a href="{{ path('app_index') }}">
         Retour à l'accueil
    </a>
{% endblock %}
